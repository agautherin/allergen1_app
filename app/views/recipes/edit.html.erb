<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> 
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name %>
    <%= f.fields_for :ingredient_recipes do |s|%>
        <%= s.label :ingredient%>
        <%= s.collection_select :ingredient_id, Ingredient.all, :id, :name %>
    <% end %>
    <%= f.submit "Create recipe" %> 
<% end %>
